{
    "variables": {
        "arch": "",
        "name": "",
        "iso_url": "",
        "iso_checksum": "",

        "headless": true,
        "disk_size": 5120,
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "http_directory": ".",
        "http_port_min": 9000,
        "http_port_max": 9500,
        "boot_wait": "5s",
        "shutdown_command": "sudo halt -p"
    },

    "builders": [
        {
            "type": "virtualbox-iso",
            "name": "{{user `name`}}-vbox",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "md5",
            "guest_os_type": "Debian_64",
            "headless": "{{user `headless`}}",
            "disk_size": "{{user `disk_size`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "http_directory": "{{user `http_directory`}}",
            "http_port_min": "{{user `http_port_min`}}",
            "http_port_max": "{{user `http_port_max`}}",
            "boot_wait": "{{user `boot_wait`}}",
            "boot_command": ["<esc><wait>auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter>"],
            "shutdown_command": "{{user `shutdown_command`}}",
            "vm_name": "{{user `name`}}"
        },
        {
            "type": "vmware-iso",
            "name": "{{user `name`}}-vmware",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "md5",
            "guest_os_type": "debian7-64",
            "headless": "{{user `headless`}}",
            "disk_size": "{{user `disk_size`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "http_directory": "{{user `http_directory`}}",
            "http_port_min": "{{user `http_port_min`}}",
            "http_port_max": "{{user `http_port_max`}}",
            "boot_wait": "{{user `boot_wait`}}",
            "boot_command": ["<esc><wait>auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<enter>"],
            "shutdown_command": "{{user `shutdown_command`}}",
            "vm_name": "{{user `name`}}"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install -y git curl vim htop",

                "mkdir -pm 700 /home/vagrant/.ssh",
                "echo \"ssh-rsa  vagrant insecure public key\" > /home/vagrant/.ssh/authorized_keys",
                "chmod 0600 /home/vagrant/.ssh/authorized_keys",
                "chown -R vagrant:vagrant /home/vagrant/",

                "curl -L https://www.opscode.com/chef/install.sh | sudo bash -s -- -v 11.10.0"
            ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 4,
            "keep_input_artifact": true,
            "output": "{{.BuildName}}.box"
        }
    ]
}
